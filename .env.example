# ==============================================
# Real-Time Market Intelligence Platform
# Environment Configuration Template
# ==============================================

# Application Settings
# --------------------
APP_ENV=development
APP_NAME=market-intelligence
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
# -----------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# Financial Data APIs
# -------------------
# Alpha Vantage
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Yahoo Finance
YAHOO_FINANCE_API_KEY=your_yahoo_finance_key_here

# Bloomberg (optional)
BLOOMBERG_API_KEY=your_bloomberg_key_here
BLOOMBERG_API_SECRET=your_bloomberg_secret_here

# Twitter API (for sentiment analysis)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Database Configuration
# ----------------------
# ClickHouse
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=9000
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your_clickhouse_password_here
CLICKHOUSE_DATABASE=market_intelligence

# Kafka Configuration
# -------------------
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_GROUP_ID=market-intelligence-group
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=True

# Kafka Topics
KAFKA_TOPIC_PRICE_UPDATES=price-updates
KAFKA_TOPIC_NEWS=news-feed
KAFKA_TOPIC_SOCIAL_MEDIA=social-media
KAFKA_TOPIC_PREDICTIONS=predictions
KAFKA_TOPIC_ALERTS=alerts

# Redis Configuration
# -------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_CACHE_TTL=300

# WebSocket Configuration
# -----------------------
WS_HOST=0.0.0.0
WS_PORT=8001
WS_HEARTBEAT_INTERVAL=30

# Frontend Configuration
# ----------------------
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Machine Learning Models
# -----------------------
ML_MODEL_PATH=./models
ML_LSTM_EPOCHS=100
ML_LSTM_BATCH_SIZE=32
ML_PROPHET_CHANGEPOINT_PRIOR_SCALE=0.05

# Monitoring & Observability
# ---------------------------
# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# Performance Tuning
# ------------------
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=100
STREAM_BUFFER_SIZE=10000

# Data Ingestion
# --------------
DATA_FETCH_INTERVAL=60
MAX_ASSETS_PER_REQUEST=100
RETRY_ATTEMPTS=3
RETRY_BACKOFF=2

# Security
# --------
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440
ENCRYPTION_KEY=your_encryption_key_here_change_in_production

# Email Notifications (optional)
# -------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here
SMTP_FROM=noreply@market-intelligence.com

# Alert Configuration
# -------------------
ALERT_EMAIL_ENABLED=False
ALERT_SLACK_ENABLED=False
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Feature Flags
# -------------
ENABLE_SENTIMENT_ANALYSIS=True
ENABLE_PRICE_PREDICTION=True
ENABLE_ANOMALY_DETECTION=True
ENABLE_SOCIAL_MEDIA_MONITORING=False

# Rate Limiting
# -------------
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Backup & Recovery
# -----------------
BACKUP_ENABLED=True
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups
